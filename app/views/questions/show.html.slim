h2 
  | 問題詳細

.show
  table.table 
    tr
      th
        | 年度
      td
        = @question.test_subject.test_number.year.to_s + "年 第 " + @question.test_subject.test_number.number.to_s + " 回" 
    tr
      th
        | 科目
      td
        = @question.test_subject.subject.name
    tr
      th
        | 問
      td
        = @question.text
        br
        - if @question.attention.present?
          = "(注) " + @question.attention



  table.table
    tr
      th
        | No.
      th style="width: 47%"
        | 選択肢
      th style="width: 47%"
        | 解説
    tr
      th.text-center
        = render 'number', num: 1, answer_arr: @answer_arr
      td
        = @question.choice1 
      td
        = @question.answer1
    tr
      th.text-center
        = render 'number', num: 2, answer_arr: @answer_arr
      td
        = @question.choice2
      td
        = @question.answer2
    tr
      th.text-center
        = render 'number', num: 3, answer_arr: @answer_arr
      td
        = @question.choice3
      td
        = @question.answer3
    tr
      th.text-center
        = render 'number', num: 4, answer_arr: @answer_arr
      td
        = @question.choice4
      td
        = @question.answer4
    tr
      th.text-center
        = render 'number', num: 5, answer_arr: @answer_arr
      td
        = @question.choice5
      td
        = @question.answer5

  table.table
    tr 
      th
        | メモ
      td
        = @question.comment
    tr 
      th
        | 登録日時
      td 
        = @question.created_at.strftime("%Y/%m/%d %H:%M")
    tr
      th 
        | 更新日時
      td
        = @question.updated_at.strftime("%Y/%m/%d %H:%M")

  - if user_signed_in?
    .links
      .row
        .col
          = link_to "編集", edit_question_path(@question), class: "btn btn-info btn-block"
        .col
          = link_to "削除", question_path(@question), method: :delete, data: { confirm: "削除しますか？" }, class: "btn btn-outline-danger btn-block"





