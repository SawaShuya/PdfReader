= form_with model: question, local: true do |f|
  .form-group
    = f.label "問題文"
    = f.text_area :text, class: "form-control"
  .form-group
    = f.label "注"
    = f.text_area  :attention, class: "form-control"

  .form-group.row
    .col-6
      = f.label "選択肢1"
      = f.text_area  :choice1, class: "form-control"
    .col-6
      .custom-control.custom-checkbox.mb-2
        = f.check_box :collect_answer1, class: "custom-control-input"
        = f.label "解答1", class: "custom-control-label", for: "question_collect_answer1"
      = f.text_area  :answer1, class: "form-control"

      

  .form-group.row
    .col-6
      = f.label "選択肢2"
